<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thecalculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/x2_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
         <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
				<action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name=".MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="MAINMENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
              
       
        
        <activity
            android:name="com.example.thecalculator.BasicCalculator"
            android:label="@string/basicC" >
        </activity>
        
        <activity
            android:name="com.example.thecalculator.tipCalculator"
            android:label="@string/tipC" >
        </activity>
        <activity
            android:name="com.example.thecalculator.tempCalculator"
            android:label="@string/tempC" >
        </activity>
        <activity
            android:name="com.example.thecalculator.Feedback"
            android:label="@string/feedback" >
        </activity>
        <activity
            android:name="com.example.thecalculator.GpaCalculator"
            android:label="@string/GPAC" >
        </activity>
        <activity
            android:name="com.example.thecalculator.LengthCalculator"
            android:label="@string/lengthC" >
        </activity>
         <activity
            android:name="com.example.thecalculator.Weight"
            android:label="@string/weightC" >
        </activity>
        
    </application>

</manifest>
